<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, required: true, autofocus: true, label: false, placeholder: 'Name' %>
    <%= f.input :email, required: true, autofocus: true, label: false, placeholder: 'Email' %>
    <%= f.input :password, required: true, autofocus: true, label: false, placeholder: 'Password' %>
    <%= f.input :password_confirmation, required: true, autofocus: true, label: false, placeholder: 'Password confirmation' %>
  </div>

  <div class="form-actions">
    <%= f.submit %>
  </div>
<% end %>
